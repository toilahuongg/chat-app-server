{
  "name": "chat-app-server",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "ts-node --files  -r tsconfig-paths/register --project ./tsconfig.server.json ./server/index.ts",
    "redis": "ts-node --files  -r tsconfig-paths/register --project ./tsconfig.server.json ./server/services/redis.ts",
    "build": "npm run build:client && npm run build:server",
    "build:client": "next build",
    "build:server": "tsc --project tsconfig.server.json",
    "serve": "cross-env NODE_ENV=production node -r ./tsconfig-paths-bootstrap.js dist/server/index.js",
    "start:prod": "pm2 start ecosystem.config.js --no-daemon -i 4"
  },
  "dependencies": {
    "@socket.io/redis-adapter": "^8.2.1",
    "@types/node": "20.3.3",
    "@types/react": "18.2.14",
    "@types/react-dom": "18.2.6",
    "autoprefixer": "10.4.14",
    "bcrypt": "^5.1.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^16.3.1",
    "eslint": "8.44.0",
    "eslint-config-next": "13.4.8",
    "express": "^4.18.2",
    "helmet": "^7.0.0",
    "https": "^1.0.0",
    "morgan": "^1.10.0",
    "next": "13.4.8",
    "postcss": "8.4.24",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "redis": "^4.6.7",
    "socket.io": "^4.7.1",
    "socket.io-client": "^4.7.1",
    "tailwindcss": "3.3.2"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/compression": "^1.7.2",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/morgan": "^1.9.4",
    "mongoose": "^7.3.1",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0"
  }
}
